<Window x:Class="ContactApp.MouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ContactApp"
        Title="MouseWindow" Height="300" Width="300">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="uxStatus"/>
            </StatusBarItem>
        </StatusBar>
        <Canvas x:Name="uxCanvas"
            MouseMove="uxCanvas_MouseMove" 
            MouseDown="uxCanvas_MouseDown"
            MouseUp="uxCanvas_MouseUp"
            Background="Transparent"></Canvas>
    </DockPanel>
</Window>
