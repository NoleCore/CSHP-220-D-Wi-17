<Window x:Class="HelloWorld.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecondWindow" Height="300" Width="300">
    <Grid>
        <ListView x:Name="uxList" Background="BlanchedAlmond" FontWeight="Bold">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="50" Header="Name" />
                    <GridViewColumn DisplayMemberBinding="{Binding Password}" Width="70" Header="Password" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
