<Window x:Class="HelloWorld.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SecondWindow" Height="300" Width="300">
    <ListView x:Name="uxList" Background="Turquoise" FontWeight="Bold" GridViewColumnHeader.Click="ColumnClick">
        <ListView.View>
            <GridView>
                <GridViewColumn DisplayMemberBinding="{Binding Name}" Width ="50" Header="Name">
                </GridViewColumn>
                <GridViewColumn DisplayMemberBinding="{Binding Password}" Width ="90" Header="Password">
                </GridViewColumn>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
